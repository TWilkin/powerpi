{
    "configurations": [
        // services
        {
            "name": "API",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["start:deep-thought"],
            "resolveSourceMapLocations": ["**", "!**/node_modules/**"],
            "env": {
                "EXTERNAL_HOST_NAME": "localhost",
                "EXTERNAL_PORT": "3000",
                "USE_HTTP": "false"
            },
            "presentation": {
                "group": "Services"
            }
        },
        {
            "name": "Config Server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["start:clacks-config"],
            "resolveSourceMapLocations": ["**", "!**/node_modules/**"],
            "presentation": {
                "group": "Services"
            }
        },
        {
            "name": "Energy Monitor",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["start:energy-monitor"],
            "resolveSourceMapLocations": ["**", "!**/node_modules/**"],
            "presentation": {
                "group": "Services"
            }
        },
        {
            "name": "FreeDNS",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["start:freedns"],
            "resolveSourceMapLocations": ["**", "!**/node_modules/**"],
            "presentation": {
                "group": "Services"
            }
        },
        {
            "name": "Persistence",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["start:persistence"],
            "resolveSourceMapLocations": ["**", "!**/node_modules/**"],
            "presentation": {
                "group": "Services"
            }
        },
        {
            "name": "Scheduler",
            "type": "python",
            "request": "launch",
            "module": "scheduler",
            "cwd": "${workspaceFolder}/services/scheduler",
            "presentation": {
                "group": "Services"
            }
        },
        {
            "name": "Shutdown",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/services/shutdown/src",
            "args": ["--mock"],
            "presentation": {
                "group": "Services"
            }
        },
        {
            "name": "UI",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/services/ui",
            "presentation": {
                "group": "Services"
            }
        },
        {
            "name": "Voice Assistant",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["start:voice-assistant"],
            "resolveSourceMapLocations": ["**", "!**/node_modules/**"],
            "presentation": {
                "group": "Services"
            }
        },

        // controllers
        {
            "name": "Energenie Controller",
            "type": "python",
            "request": "launch",
            "module": "energenie_controller",
            "cwd": "${workspaceFolder}/controllers/energenie",
            "presentation": {
                "group": "Controllers"
            }
        },
        {
            "name": "Harmony Controller",
            "type": "python",
            "request": "launch",
            "module": "harmony_controller",
            "cwd": "${workspaceFolder}/controllers/harmony",
            "presentation": {
                "group": "Controllers"
            }
        },
        {
            "name": "LIFX Controller",
            "type": "python",
            "request": "launch",
            "module": "lifx_controller",
            "cwd": "${workspaceFolder}/controllers/lifx",
            "presentation": {
                "group": "Controllers"
            }
        },
        {
            "name": "Macro Controller",
            "type": "python",
            "request": "launch",
            "module": "macro_controller",
            "cwd": "${workspaceFolder}/controllers/macro",
            "presentation": {
                "group": "Controllers"
            }
        },
        {
            "name": "Node Controller",
            "type": "python",
            "request": "launch",
            "module": "node_controller",
            "cwd": "${workspaceFolder}/controllers/node",
            "presentation": {
                "group": "Controllers"
            }
        },
        {
            "name": "ZigBee Controller",
            "type": "python",
            "request": "launch",
            "module": "zigbee_controller",
            "cwd": "${workspaceFolder}/controllers/zigbee",
            "presentation": {
                "group": "Controllers"
            }
        }
    ]
}
