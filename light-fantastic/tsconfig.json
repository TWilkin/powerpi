{
    "compilerOptions": {
      "target": "es2020",
      "lib": ["es2020"],
      "rootDir": "src",
      "outDir": "dist",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "declaration": true,
      "sourceMap": true,
      "inlineSources": true,
      "types": ["node"],
      "stripInternal": true,
      "esModuleInterop": true,
      "noImplicitAny": false,
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*"
    ]
} 
