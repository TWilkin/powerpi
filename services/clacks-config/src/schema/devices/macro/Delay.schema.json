{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/macro/Delay.schema.json",
    "title": "Delay",
    "description": "The Delay device",
    "type": "object",
    "allOf": [
        {
            "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/BaseDevice.schema.json"
        }
    ],
    "properties": {
        "type": {
            "const": "delay"
        },
        "start": {
            "description": "The delay in seconds to apply when turning on",
            "type": "number",
            "minimum": 0
        },
        "end": {
            "description": "The delay in seconds to apply when turning off",
            "type": "number",
            "minimum": 0
        }
    },
    "anyOf": [{ "required": ["start"] }, { "required": ["end"] }]
}
