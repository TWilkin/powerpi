{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/lifx/LIFXLight.schema.json",
    "title": "LIFXLight",
    "description": "The LIFXLight device",
    "type": "object",
    "allOf": [
        {
            "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/BaseDevice.schema.json"
        },
        {
            "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/PollableDevice.schema.json"
        }
    ],
    "properties": {
        "type": {
            "const": "lifx_light"
        },
        "mac": {
            "description": "The MAC address where the LIFX Light can be found",
            "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/common/MACAddress.schema.json"
        },
        "hostname": {
            "description": "The hostname where the LIFX Light can be found",
            "type": "string",
            "format": "hostname"
        },
        "ip": {
            "description": "The IP address where the LIFX Light can be found",
            "type": "string",
            "format": "ipv4"
        },
        "duration": {
            "description": "How long to take to dim/brighten the light when turning on/off in milliseconds",
            "type": "integer",
            "minimum": 0
        }
    },
    "required": ["mac"],
    "oneOf": [{ "required": ["hostname"] }, { "required": ["ip"] }]
}
