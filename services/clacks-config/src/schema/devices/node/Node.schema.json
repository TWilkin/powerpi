{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/node/Node.schema.json",
    "title": "Node",
    "description": "The Node device providing data for a node in the cluster",
    "type": "object",
    "allOf": [
        {
            "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/BaseDevice.schema.json"
        },
        {
            "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/PollableDevice.schema.json"
        }
    ],
    "properties": {
        "type": {
            "const": "node"
        },
        "ip": {
            "description": "The IP address where the cluster node can be found",
            "type": "string",
            "format": "ipv4"
        },
        "pijuice": {
            "description": "The PiJuice configuration",
            "type": "object",
            "properties": {
                "charge_battery": {
                    "description": "Whether to charge the PiJuice's battery",
                    "type": "boolean"
                },
                "max_charge": {
                    "description": "The maximum battery percentage to charge to",
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 100
                },
                "shutdown_delay": {
                    "description": "The time to give the Pi to shutdown before the PiJuice cuts the power",
                    "type": "integer",
                    "minimum": 60
                },
                "shutdown_level": {
                    "description": "The battery percentage at which the node shuts down to prevent power loss",
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 100
                },
                "wake_up_on_charge": {
                    "description": "The battery percentage at which the node will turn back on",
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 100
                }
            },
            "additionalProperties": false
        },
        "pwm_fan": {
            "description": "The PWM fan configuration",
            "type": "object",
            "properties": {
                "curve": {
                    "description": "The PWM fan curve",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "temperature": {
                                "description": "The temperature this point represents",
                                "type": "number",
                                "minimum": 0,
                                "maximum": 70
                            },
                            "speed": {
                                "description": "The speed this point represents",
                                "type": "number",
                                "minimum": 0,
                                "maximum": 100
                            }
                        },
                        "required": ["temperature", "speed"],
                        "additionalProperties": false
                    }
                }
            },
            "additionalProperties": false
        }
    },
    "required": ["ip"]
}
