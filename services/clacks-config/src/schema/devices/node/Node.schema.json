{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/node/Node.schema.json",
    "title": "Node",
    "description": "The Node device providing data for a node in the cluster",
    "type": "object",
    "allOf": [
        {
            "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/BaseDevice.schema.json"
        },
        {
            "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/PollableDevice.schema.json"
        }
    ],
    "properties": {
        "type": {
            "const": "node"
        },
        "ip": {
            "description": "The IP address where the cluster node can be found",
            "type": "string",
            "format": "ipv4"
        },
        "pijuice": {
            "description": "The PiJuice configuration",
            "type": "object",
            "properties": {
                "charge_battery": {
                    "description": "Whether to charge the PiJuice's battery",
                    "type": "boolean"
                },
                "shutdown_level": {
                    "description": "The battery percentage at which the node shuts down to prevent power loss",
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 100
                },
                "wake_up_on_charge": {
                    "description": "The battery percentage at which the node will turn back on",
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 100
                }
            },
            "additionalProperties": false
        }
    },
    "required": ["ip"]
}
