{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices.schema.json",
    "title": "Devices",
    "description": "The configuration for the devices and sensors controlled by PowerPi",
    "type": "object",
    "properties": {
        "devices": {
            "description": "The list of devices controlled by PowerPi",
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/energenie/EnergeniePairing.schema.json"
                    },
                    {
                        "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/energenie/EnergenieSocket.schema.json"
                    },
                    {
                        "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/energenie/EnergenieSocketGroup.schema.json"
                    },
                    {
                        "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/harmony/HarmonyActivity.schema.json"
                    },
                    {
                        "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/harmony/HarmonyHub.schema.json"
                    },
                    {
                        "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/lifx/LIFXLight.schema.json"
                    },
                    {
                        "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/macro/Composite.schema.json"
                    },
                    {
                        "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/macro/Delay.schema.json"
                    },
                    {
                        "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/macro/Log.schema.json"
                    },
                    {
                        "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/macro/Mutex.schema.json"
                    },
                    {
                        "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/macro/Variable.schema.json"
                    },
                    {
                        "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/zigbee/ZigBeePairing.schema.json"
                    }
                ]
            }
        },
        "sensors": {
            "description": "The list of sensors controlled by PowerPi",
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/zigbee/AqaraDoor.schema.json"
                    },
                    {
                        "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/zigbee/OsramSwitchMini.schema.json"
                    }
                ]
            }
        }
    },
    "required": ["devices", "sensors"],
    "additionalProperties": false
}
