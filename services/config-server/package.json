{
    "name": "@powerpi/config-server",
    "version": "1.1.4",
    "description": "PowerPi config retrieval from GitHub pushing to message queue",
    "private": true,
    "license": "GPL-3.0-only",
    "author": "TWilkin",
    "repository": {
        "type": "git",
        "url": "https://github.com/TWilkin/powerpi.git",
        "directory": "services/config-server"
    },
    "main": "./dist/src/index.js",
    "types": "./dist/src/index.d.ts",
    "scripts": {
        "build": "tsc",
        "clean": "rm -rf dist",
        "coverage": "jest --coverage",
        "start:dev": "ts-node src/index.ts",
        "start:prd": "node dist/src/index.js",
        "test": "jest"
    },
    "dependencies": {
        "@octokit/rest": "^20.0.1",
        "@powerpi/common": "^0.1.2",
        "ajv": "^8.11.0",
        "ajv-formats": "2.1.1",
        "ts-command-line-args": "^2.5.1",
        "typedi": "^0.10.0",
        "underscore": "^1.13.4",
        "yaml": "^2.3.1"
    },
    "devDependencies": {
        "@powerpi/common-test": "^0.0.10",
        "@types/node": "^20.4.9",
        "@types/underscore": "^1.11.6",
        "ts-node": "^10.8.2",
        "typescript": "^5.1.6"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "@powerpi/common-test/expect"
        ],
        "collectCoverage": false,
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!**/node_modules/**",
            "!**/test/**",
            "!**/*.test.ts"
        ],
        "coverageReporters": [
            "text"
        ]
    }
}
