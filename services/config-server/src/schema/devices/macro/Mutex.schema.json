{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/macro/Mutex.schema.json",
    "title": "Mutex",
    "description": "The Mutex device",
    "type": "object",
    "allOf": [
        {
            "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/BaseDevice.schema.json"
        },
        {
            "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/PollableDevice.schema.json"
        }
    ],
    "properties": {
        "type": {
            "const": "mutex"
        },
        "on_devices": {
            "description": "The list of devices that must be turned on when this mutex is turned on",
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/common/Identifier.schema.json"
            }
        },
        "off_devices": {
            "description": "The list of devices that must be turned off when this mutex is turned on",
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/common/Identifier.schema.json"
            }
        }
    },
    "required": ["on_devices", "off_devices"]
}
