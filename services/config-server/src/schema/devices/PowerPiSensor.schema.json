{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/PowerPiSensor.schema.json",
    "title": "PowerPiSensor",
    "description": "A PowerPi sensor using the ESP8266 code",
    "type": "object",
    "allOf": [
        {
            "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/BaseDevice.schema.json"
        }
    ],
    "properties": {
        "type": {
            "const": "esp8266"
        },
        "poll_delay": {
            "description": "The delay between sensor polling in milliseconds",
            "type": "integer",
            "minimum": 1
        },
        "dht22": {
            "description": "The options for a DHT22 temperature/humidity sensor",
            "type": "object",
            "properties": {
                "skip": {
                    "description": "The number of seconds to skip between readings",
                    "type": "integer",
                    "minimum": 1
                }
            },
            "additionalProperties": false
        },
        "pir": {
            "description": "The options for a PIR motion sensor",
            "type": "object",
            "properties": {
                "init_delay": {
                    "description": "The number of milliseconds to allow the PIR to initialise",
                    "type": "integer",
                    "minimum": 1
                },
                "post_detect_skip": {
                    "description": "The number of seconds to skip readings between a transition",
                    "type": "integer",
                    "minimum": 1
                },
                "post_motion_check": {
                    "description": "The number of seconds to check motion is no longer detected to confirm",
                    "type": "integer",
                    "minimum": 1
                }
            },
            "additionalProperties": false
        }
    }
}
