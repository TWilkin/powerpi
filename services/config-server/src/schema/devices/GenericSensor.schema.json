{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/GenericSensor.schema.json",
    "title": "GenericSensor",
    "description": "A generic sensor outside of PowerPi that should appear in the UI but not be controller",
    "type": "object",
    "allOf": [
        {
            "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/BaseDevice.schema.json"
        },
        {
            "$ref": "https://github.com/TWilkin/powerpi/tree/master/services/clacks-config/src/schema/devices/Sensor.schema.json"
        }
    ],
    "oneOf": [
        { "properties": { "type": { "const": "electricity" } } },
        { "properties": { "type": { "const": "gas" } } },
        { "properties": { "type": { "const": "humidity" } } },
        { "properties": { "type": { "const": "motion" } } },
        { "properties": { "type": { "const": "temperature" } } }
    ],
    "required": ["location", "entity"]
}
