{
    "name": "powerpi",
    "private": true,
    "license": "GPL-3.0-only",
    "author": "TWilkin",
    "repository": {
        "type": "git",
        "url": "https://github.com/TWilkin/powerpi.git"
    },
    "workspaces": {
        "packages": [
            "common/node/api",
            "common/node/common",
            "services/babel-fish",
            "services/clacks-config",
            "services/deep-thought",
            "services/energy-monitor",
            "services/freedns",
            "services/light-fantastic",
            "services/nginx/ui",
            "services/persistence"
        ],
        "nohoist": [
            "**/@fortawesome/fontawesome-free",
            "**/react-datepicker"
        ]
    },
    "scripts": {
        "build:api": "yarn workspace @powerpi/api build",
        "build:common": "yarn workspace @powerpi/common build",
        "build:ui": "yarn workspace @powerpi/ui build",
        "clean": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +",
        "lint": "eslint . --ext .ts --ext .tsx",
        "prettier": "prettier --write .",
        "start:babel-fish": "yarn workspace @powerpi/babel-fish start",
        "start:clacks-config": "yarn workspace @powerpi/clacks-config start",
        "start:deep-thought": "yarn workspace @powerpi/deep-thought start",
        "start:energy-monitor": "yarn workspace @powerpi/energy-monitor start",
        "start:freedns": "yarn workspace @powerpi/freedns start",
        "start:light-fantastic": "yarn workspace @powerpi/light-fantastic start",
        "start:persistence": "yarn workspace @powerpi/persistence start",
        "start:ui": "yarn workspace @powerpi/ui start",
        "test:ui": "yarn workspace @powerpi/ui test"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.5.0",
        "@typescript-eslint/parser": "^5.5.0",
        "eslint": "^8.4.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "prettier": "^2.5.1",
        "typescript": "^4.5.3"
    }
}
