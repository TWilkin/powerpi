{
    "name": "powerpi",
    "private": true,
    "license": "GPL-3.0-only",
    "author": "TWilkin",
    "repository": {
        "type": "git",
        "url": "https://github.com/TWilkin/powerpi.git"
    },
    "workspaces": {
        "packages": [
            "common/node/api",
            "common/node/common",
            "common/node/common-test",
            "services/babel-fish",
            "services/clacks-config",
            "services/deep-thought",
            "services/energy-monitor",
            "services/freedns",
            "services/light-fantastic",
            "services/nginx/ui",
            "services/persistence"
        ],
        "nohoist": [
            "**/@fortawesome/fontawesome-free",
            "**/react-datepicker"
        ]
    },
    "scripts": {
        "build:api": "yarn workspace @powerpi/api build",
        "build:babel-fish": "yarn workspace @powerpi/babel-fish build",
        "build:babel-fish:alexa": "yarn workspace @powerpi/babel-fish build:alexa",
        "build:common": "yarn workspace @powerpi/common build",
        "build:common-test": "yarn workspace @powerpi/common-test build",
        "build:deep-thought": "yarn workspace @powerpi/deep-thought build",
        "build:lib": "yarn build:api; yarn build:common; yarn build:common-test",
        "build:persistence": "yarn workspace @powerpi/persistence build",
        "build:ui": "yarn workspace @powerpi/ui build",
        "clean": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +",
        "lint": "eslint . --ext .ts --ext .tsx",
        "prettier": "prettier --write .",
        "start:babel-fish": "yarn workspace @powerpi/babel-fish start:debug",
        "start:clacks-config": "yarn workspace @powerpi/clacks-config start",
        "start:deep-thought": "yarn workspace @powerpi/deep-thought start:dev",
        "start:energy-monitor": "yarn workspace @powerpi/energy-monitor start",
        "start:freedns": "yarn workspace @powerpi/freedns start",
        "start:light-fantastic": "yarn workspace @powerpi/light-fantastic start",
        "start:persistence": "yarn workspace @powerpi/persistence start:dev",
        "start:ui": "yarn workspace @powerpi/ui start",
        "test:babel-fish": "yarn workspace @powerpi/babel-fish test",
        "test:ui": "yarn workspace @powerpi/ui test"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.30.0",
        "@typescript-eslint/parser": "^5.30.0",
        "eslint": "^8.18.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-react": "^7.30.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "prettier": "^2.7.1",
        "typescript": "^4.7.4"
    }
}
